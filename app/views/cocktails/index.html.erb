<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.independent.co.uk/s3fs-public/thumbnails/image/2018/05/22/13/gin-cocktails.jpg);">
  <div class="container text-center">
    <h1>Mr. Cocktail Da_ZL</h1>
      <p>
        <span id="banner-typed-text"></span>
      </p>
  </div>
</div>

<div class="container">
  <div class="cards mt-3 text-center" >
    <% @cocktails.each do |c| %>
    <% link = cl_image_path c.photo.key.to_s %>
      <div class="card-category m-1" style="height: 200px;
    background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= link %> ) ">
    <%= link_to(cocktail_path(c)) do %>
        <div>
          <h5 class="text-white mt-2"> <strong> <%= c.name %> </strong>  </h5>
        </div>
        <div>
          <p class="align-text-bottom" ></p>
        </div>
        <div>
          <% c.doses.each do |dose| %>
            <p class="text-white text-justify ml-3"> <%= dose.description %> - <%= dose.ingredient.name %> </p>
          <% end %>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
